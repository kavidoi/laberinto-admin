# =============================================
# DATABASE
# =============================================
DATABASE_URL="postgresql://username:password@hostname:port/database"

# =============================================
# NEXTAUTH.JS AUTHENTICATION
# =============================================
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# =============================================
# STRIPE PAYMENTS
# =============================================
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Stripe Product IDs for subscriptions (if using)
STRIPE_PRICE_ID_PREMIUM="price_your_premium_price_id"

# =============================================
# FILE STORAGE (AWS S3)
# =============================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="laberinto-assets"

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================
# EMAIL SERVICE (RESEND)
# =============================================
# EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
# EMAIL_FROM="noreply@laberinto.com"

# Alternative: SendGrid
SENDGRID_API_KEY="SG.your_sendgrid_api_key"

# =============================================
# REDIS (OPTIONAL - FOR CACHING)
# =============================================
REDIS_URL="redis://localhost:6379"
# Or for Upstash Redis
UPSTASH_REDIS_REST_URL="https://your-redis-endpoint.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# =============================================
# ANALYTICS & MONITORING
# =============================================

# Vercel Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Sentry Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# =============================================
# EXTERNAL APIS
# =============================================

# Google Maps API (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# WhatsApp Business API
WHATSAPP_BUSINESS_API_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Chilean Tax System (SII)
SII_RUT="your-company-rut"
SII_API_KEY="your-sii-api-key"

# =============================================
# FEATURE FLAGS
# =============================================
ENABLE_LOYALTY_PROGRAM="true"
ENABLE_WINE_REVIEWS="true"
ENABLE_SUBSCRIPTION_BOX="false"
ENABLE_MULTILINGUAL="false"

# =============================================
# APP CONFIGURATION
# =============================================
APP_NAME="Laberinto"
APP_DESCRIPTION="Premium Wine Experience & Ecommerce Platform"
APP_URL="https://laberinto.com"
CONTACT_EMAIL="contact@laberinto.com"

# Business Configuration
DEFAULT_CURRENCY="CLP"
DEFAULT_LANGUAGE="es"
DEFAULT_TIMEZONE="America/Santiago"

# Inventory Settings
LOW_STOCK_THRESHOLD="10"
ENABLE_BACKORDERS="false"

# Booking Settings
MAX_BOOKING_ADVANCE_DAYS="90"
MIN_BOOKING_ADVANCE_HOURS="24"
DEFAULT_BOOKING_DURATION="120"

# =============================================
# DEVELOPMENT & TESTING
# =============================================
NODE_ENV="development"

# Bundle Analyzer
ANALYZE="false"

# Build Configuration
BUILD_STANDALONE="false"

# Test Database (for testing)
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/laberinto_test"

# Seed Data
SEED_ADMIN_EMAIL="admin@laberinto.com"
SEED_ADMIN_PASSWORD="admin123"

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds

# =============================================
# SECURITY
# =============================================
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# CORS Settings
CORS_ORIGIN="http://localhost:3000"

# =============================================
# LOGGING
# =============================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================

# Zapier Webhooks
ZAPIER_WEBHOOK_URL="https://hooks.zapier.com/hooks/catch/your-webhook-id"

# Slack Notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/slack/webhook"

# CRM Integration (e.g., HubSpot)
HUBSPOT_API_KEY="your-hubspot-api-key"

# Inventory Management System
INVENTORY_API_URL="https://your-inventory-system.com/api"
INVENTORY_API_KEY="your-inventory-api-key" 